.wrap {
  width: 80%;
  margin: 0 auto;
  padding: 20px;
  border: 1px solid #fff;
  border-radius: 20px;
}

.skill{
  background: #666699;
  opacity: .8;
  margin-bottom:30px;
}
.title {
  height: 32px;
  margin-top: 10px;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 20px;
  font-weight: bold;
  color: #fff;
}

.line {
  flex: 1;
  height: 2px;
  margin-left: 20px;
  background: #ffe4b5;
}

.row {
  display: flex;
  justify-content: space-between;
}

.info {
  font-size: 18px;
  color: #f5f5f5;
  line-height: 30px;
}
.info:first-child{
  flex: 2;
}
.info:last-child{
  flex: 1;

}