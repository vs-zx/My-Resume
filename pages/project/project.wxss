/* pages/project/project.wxss */
.container{
  width:100%;
  height:100%;
  display:flex;
  flex-direction: column;
}
.outer-swiper{
  flex:1;
  width:90%;
  min-height:60%;
  margin:0 auto;
  background:rgba(245,245,245,.9);
  border-radius:5px;
}
.wrap{
  height:100%;
  padding:15px;
  box-sizing: border-box;
  display:flex;
  flex-direction: column;
}
.title{
  padding-bottom:10px;
  border-bottom:1px solid #00cc99;
  font-size:20px;
  font-weight:bold;
  color:#0099ff;
  text-align:center;
  letter-spacing: 3rpx;
}
.effect{
  font-size:12px;
  color:#333;
  margin-top:10px;
}
/* 内层展示图 */
.inner-swiper{
  width:100%;
  height:160px;
  margin-top:5px;
  box-shadow: 0 3px 5px rgba(0,0,0,.4);
}
.inner-swiper image{
  width:100%;
  height:100%;
}
.skill{
  margin-top:10px;
  font-weight:bold;
  font-size:15px;
  color:#333;
}
.detail{
  margin-top:10px;
}
.detail text{
  display:block;
  line-height:24px;
  font-size:14px;
  color:#333;
}
.address{
  margin-top:15px;
  font-size:14px;
  color:#333;
}